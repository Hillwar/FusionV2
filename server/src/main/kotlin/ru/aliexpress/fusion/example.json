{
  "rootView": {
    "type": "Column",
    "children": [
      {
        "type": "Text",
        "text": "$.text",
        "viewAttr": {
          "background": {
            "color": "$.color"
          },
          "onTap": "onTextTap"
        },
        "state": {
          "$.text": "Old value"
        }
      },
      {
        "type": "Text",
        "text": "text2"
      }
    ],
    "viewAttr": {
      "size": {
        "maxWidth": {
          "value": 100.0
        },
        "maxHeight": {
          "value": 100.0
        }
      }
    }
  },
  "state": {
    "$.color": "#0000FF"
  },
  "script": "function onTextTap(state) {\n    let newState = state;\n    newState['$.text'] = 'New value';\n    newState['$.color'] = '#FF0000';\n    return newState;\n}"
}